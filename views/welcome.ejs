<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>welcome</title>
    <link rel="stylesheet" href="/css/authentication.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
</head>
<body>

    
<div class="success_container">
    <div class="success_inner">
        <p>Your registration is Successful <br> you will be redirected to login page shortly</p>
        <div class="check">
            <i class="fa fa-check"></i>
        </div>
       <div class="counter"></div>
    </div>
</div>
    

<script>
    const counter = document.querySelector(".counter")
    const check = document.querySelector(".fa-check")
    let countdown = 10
    window.addEventListener("load", (e)=>{
      setInterval(()=>{
        counter.innerHTML = countdown--
        check.classList.add("showMark")
       if(countdown == 0 ){
        window.location.replace("/users/login")
       }
      }, 1000)
    })
</script>
</body>
</html>