<section class="create_post">
    
    <form action="/post/new" method="POST" enctype="multipart/form-data">
        <h2>Create New Post</h2>
        <div class="title">
            <label for="title">Title</label>
            <input type="text" name="title" placeholder="title" >
        </div>
        <div class="categories">
            <label for="categories">Categories</label>

           <select name="categories" id="categories">
               <option value="none">Choose categories</option>
               <option value="sport">Sport</option>
               <option value="health">Health</option>
               <option value="entertainment">Entertainment</option>
               <option value="technology">Technology</option>
           </select>
        </div>
        <div class="upload">
            <label for="postImg"></label>
            <input type="file" name="postImg" accept="image/png, image/jpg, image/jpeg" caption="user" id="postImg">
        </div>
        <div class="content">
            <label for="content">Description</label>
            <textarea name="content" id="mytextarea"></textarea>
        </div>
        <button type="submit">Submit</button>
    </form>

</section>



